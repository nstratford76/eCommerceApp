<!DOCTYPE html>
<html lang="en">
<head>
    <% include ../partials/header.ejs %>
</head>
<body>
    <% include ../partials/nav.ejs %>

    <div class="jumbotron text-center">
        <div class="container">
            <h1><%= title %></h1>
        </div>
    </div>
    <div>
        <div>
            <p>Items:</p>
            <% if (items.length > 0) { %>
            <ul class="card-list">
                <% for (item of items) { %>
                <li class="card-item">
                    <p>Title: <%= item.title%></p>
                    <img src="<%= item.imgURL%>" alt="Image" class="product-image">
                    <p>Price: $<%= item.price%></p>
                    <div class="card-actions">
                        <a class="btn btn-default" href="/proveAssignments/03/store/items/<%= item.sku %>">Details</a>
                        <a class="btn btn-default" href="/proveAssignments/03/admin/edit-item/<%= item.sku %>?edit=true">Edit</a>
                        <form method="POST" action="/proveAssignments/03/admin/delete-item"></form>
                          <input type="hidden" name="delSku" id="delSku" value="<%= item.sku %>">
                          <button type="submit" class="btn btn-default">Delete</button>
                    </div>
                </li>}
            </ul>}
        </div>
    </div>
</body>
</html>