<!DOCTYPE html>
<html>

<head>
  <% include ../includes/header.ejs %>
</head>

<body>
  <% include ../includes/nav.ejs %>
  <div class="container">
    <form action="/teamActivities/03" method="POST" class="form-inline">
      <input type="text" name="searchValue" placeholder="Search by Title" class="form-control" style="width: 300px">
      <button type="submit" class="btn btn-primary">Search</button>
      <%if (searchedValue.length > 0) { %>
      <a type="button" href="/teamActivities/03" class="btn-btn-default">Clear Search Results</a>
      <h3>Showing search results for: <%- searchedValue %></h3>
      <% } %>
    </form>
    <h1>JSON Results</h1>
    <% for(var i = 0; i < data.length; i++) {%>
    <% if(i % 3 == 0) { %>
    <div class="container">
      <% } %>
      <div class="card">
        <img src="<%-data[i].imageUrl %>" alt="t" class="cardImg">
        <div class="cardContainer">
          <h4><b><%- data[i].name %></b></h4>
          <h6><%- data[i].price %></h6>
          <p><%- data[i].description %></p>
        </div>
        <% if(i % 3 == 2) { %>
      </div>
      <% } %>
    </div>
    <$ } %>
  </div>
</body>
</html>